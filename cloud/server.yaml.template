apiVersion: apps/v1
kind: Deployment
metadata:
  name: server
spec:
  replicas: 2
  selector:
    matchLabels:
      app: server
  template:
    metadata:
      labels:
        app: server
    spec:
      containers:
          - name: server
            image: gcr.io/PROJECT_NAME/server
            command: ["/app/start.sh"]
            imagePullPolicy: Always
